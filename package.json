{
    "name": "start",
    "version": "0.0.1",
    "description": "A way to start web applications",
    "private": true,
    "license": "MIT",
    "author": "@davi-mbatista",
    "scripts": {
        "start": "webpack serve --config webpack/start.js",
        "build": "webpack --config webpack/build.js"
    },
    "devDependencies": {
        "@babel/cli": "7.13.0",
        "@babel/core": "7.13.1",
        "@babel/preset-env": "7.13.5",
        "@babel/preset-react": "7.12.13",
        "babel-eslint": "10.1.0",
        "babel-loader": "8.2.2",
        "clean-webpack-plugin": "3.0.0",
        "css-loader": "5.0.2",
        "eslint": "7.20.0",
        "eslint-loader": "4.0.2",
        "eslint-plugin-react": "7.22.0",
        "file-loader": "6.2.0",
        "html-webpack-plugin": "5.2.0",
        "mini-css-extract-plugin": "1.3.8",
        "prettier": "2.2.1",
        "size-plugin": "3.0.0",
        "style-loader": "2.0.0",
        "webpack": "5.24.0",
        "webpack-cli": "4.5.0",
        "webpack-dev-server": "3.11.2",
        "webpack-merge": "5.7.3"
    },
    "dependencies": {
        "preact": "10.5.12"
    },
    "babel": {
        "presets": [
            "@babel/env",
            [
                "@babel/preset-react",
                {
                    "pragma": "h"
                }
            ]
        ]
    },
    "browserslist": [
        "last 3 chrome version",
        "last 3 firefox version",
        "last 3 safari version",
        "last 3 ios_saf version"
    ],
    "eslintConfig": {
        "parser": "babel-eslint",
        "env": {
            "browser": true,
            "node": true,
            "es6": true,
            "worker": true,
            "serviceworker": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended"
        ],
        "settings": {
            "react": {
                "pragma": "h",
                "version": "latest"
            }
        }
    },
    "eslintIgnore": [
        "build",
        "node_modules"
    ],
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid"
    }
}
